---
const steps = [
    {
        number: 1,
        title: "Inspect & Diagnose",
        description: "We use thermal imaging cameras and moisture meters to find the real source — not just surface symptoms.",
        features: ["Thermal imaging survey", "Moisture content mapping", "Airflow analysis", "Root cause identification"]
    },
    {
        number: 2,
        title: "Remove & Contain",
        description: "Professional mould removal with HEPA filtration and containment barriers to prevent spore spread.",
        features: ["Containment barriers erected", "HEPA air scrubbers running", "Safe mould removal", "Surface sanitization"]
    },
    {
        number: 3,
        title: "Fix Root Cause",
        description: "This is where we're different — we fix what's causing the mould, not just the symptoms.",
        features: ["Ventilation upgrades (MEV/PIV)", "Insulation improvements", "Damp-proofing", "Structural repairs"]
    },
    {
        number: 4,
        title: "Verify & Document",
        description: "Post-treatment verification with full documentation for Awaab's Law compliance and insurance claims.",
        features: ["Final moisture readings", "Before/after photos", "Court-ready reports", "90-day guarantee certificate"]
    }
];
---

<section id="process" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-4xl lg:text-5xl font-black text-gray-900 mb-4">Our 4-Step Process</h2>
            <p class="text-xl text-gray-600">It's Smart. It's Thorough. It Works.</p>
        </div>

        <div class="max-w-4xl mx-auto">
            {steps.map((step, index) => (
                <div class="relative flex gap-6 md:gap-10 mb-12 last:mb-0">
                    {/* Timeline line */}
                    {index < steps.length - 1 && (
                        <div class="absolute left-8 md:left-10 top-20 w-1 h-full bg-gray-200 -z-10"></div>
                    )}
                    
                    {/* Number */}
                    <div class="flex-shrink-0 w-16 h-16 md:w-20 md:h-20 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl md:text-3xl font-black shadow-lg">
                        {step.number}
                    </div>
                    
                    {/* Content */}
                    <div class="flex-1 pb-8">
                        <h3 class="text-2xl font-bold text-blue-600 mb-3">{step.title}</h3>
                        <p class="text-gray-600 mb-4 text-lg">{step.description}</p>
                        <ul class="grid sm:grid-cols-2 gap-2">
                            {step.features.map(feature => (
                                <li class="flex items-center gap-2 text-gray-700">
                                    <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>

        {/* CTA */}
        <div class="mt-16 bg-gray-50 rounded-3xl p-8 md:p-12 text-center">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">24-48 Hour Bookings Available</h3>
            <p class="text-gray-600 mb-8">We do this every day. Over 500 properties treated in Essex & East London.</p>
            <a href="tel:02045678900" class="inline-flex items-center gap-3 bg-green-500 hover:bg-green-600 text-white text-lg font-bold px-8 py-4 rounded-xl transition-all hover:-translate-y-1 shadow-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                Call For Quick Quote: 020 4567 8900
            </a>
        </div>
    </div>
</section>